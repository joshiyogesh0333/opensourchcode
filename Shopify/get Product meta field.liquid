/*get Product meta field  */

<ul id="shipdate_value" style="display:none">
{% for variant in product.variants %}
  
<li value="{{variant.id}}" data-shipdate="{{ variant.metafields.d_j.shipdate}}" data-date="{{ variant.metafields.d_j.notificationdate}}">{{ variant.metafields.d_j.notificationdate}}</li>
  
{% endfor %}
</ul> 


<div class="meta-product">
  <div class="meta-product-info">
      <p class="meta-text info">
        {{ product.metafields['Product Info']['product_info'] }}
      </p>
  </div>
  <div class="meta-product-excerpt" style="display:none;">
      <p class="meta-text excerpt">
        {{ product.metafields['Product excerpt']['product_excerpt'] }}
      </p>
  </div>
</div>
